{
  "name": "carbonstack",
  "version": "0.1.0",
  "license": "MIT",
  "scripts": {
    "start": "NODE_ENV=production node next/app.js",
    "build": "next build",
    "dev": "concurrently -c \"green,blue\" -n \"next,base\" -p \"name\" \"npm run next:dev\" \"npm run base:dev\"",
    "next:dev": "nodemon -V --watch next next/app.js",
    "next:serve": "node next/app.js",
    "base:dev": "nodemon -V --watch base base/index.js",
    "base:serve": "node base/index.js",
    "pretest": "npm run lint --silent",
    "seed": "node scripts/seed",
    "lint": "standard",
    "test": "jest",
    "fix": "standard --fix",
    "test:api": "jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/carbonstack/carbonstack.git"
  },
  "author": "Junyoung Choi <fluke8259@gmail.com>",
  "dependencies": {
    "aws-sdk": "^2.54.0",
    "body-parser": "~1.17.1",
    "cookie-parser": "~1.4.3",
    "debug": "~2.6.3",
    "dotenv": "^4.0.0",
    "express": "~4.15.2",
    "express-fileupload": "^0.1.3",
    "express-session": "^1.15.2",
    "http-proxy-middleware": "^0.17.4",
    "moment": "^2.18.1",
    "mongoose": "^4.9.4",
    "morgan": "~1.8.1",
    "next": "^2.4.1",
    "nprogress": "^0.2.0",
    "octicons": "^5.0.1",
    "open-color": "^1.5.1",
    "passport": "^0.3.2",
    "passport-github": "^1.1.0",
    "react": "^15.5.3",
    "react-dom": "^15.5.3",
    "react-redux": "^5.0.4",
    "redux": "^3.6.0",
    "redux-logger": "^3.0.1",
    "redux-saga": "^0.15.3",
    "reduxlet-saga": "^0.3.0",
    "remark": "^7.0.1",
    "remark-react": "^4.0.0",
    "session-file-store": "^1.0.0",
    "sharp": "^0.18.1",
    "socket.io": "^1.7.4",
    "twemoji": "^2.2.5",
    "validator": "^7.0.0"
  },
  "devDependencies": {
    "@carbonstack/base-css": "^0.0.3",
    "async-to-gen": "^1.3.3",
    "babel-eslint": "^7.2.2",
    "babel-jest": "^19.0.0",
    "babel-plugin-inline-react-svg": "^0.4.0",
    "babel-plugin-transform-define": "^1.2.0",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-stage-0": "^6.24.1",
    "concurrently": "^3.4.0",
    "jest": "^19.0.2",
    "nodemon": "^1.11.0",
    "standard": "^10.0.1"
  },
  "jest": {
    "setupTestFrameworkScriptFile": "<rootDir>/specs/setup.js",
    "transform": {
      "^.+\\.js?$": "async-to-gen"
    },
    "testEnvironment": "node"
  },
  "standard": {
    "parser": "babel-eslint",
    "env": {
      "browser": true,
      "node": true,
      "jest": true
    }
  }
}
